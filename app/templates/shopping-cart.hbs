{{page-title "Shopping Cart"}}

<div class="mt-[72px] w-[1440px] mx-auto">
  <LinkTo @route="products">
    <div
      class="flex items-center pt-12 ml-[136px] justify-start text-base leading-6 font-normal"
    >
      <HeroIcon
        class="w-6 h-6 mr-2 text-gray-800"
        @icon="chevron-left"
        @type="outline"
      />Continue shopping
    </div>
  </LinkTo>

  <div class="mt-16 ml-[136px]">
    <h1 class="text-4xl font-medium leading-10 text-gray-800">Shopping Cart</h1>
    <h3
      class="mt-2 text-xl font-normal leading-7 text-gray-800 whitespace-nowrap"
    >You have {{this.model.totalItems}} items in your cart.</h3>
  </div>

  <div class="flex">

    {{#if this.model.totalItems}}
      <div class="mt-8 ml-[136px] grid grid-rows-3 gap-y-6">
        {{#each this.model.products as |product|}}
          <CartCard
            @product={{product}}
            @quantity={{this.cart.getItemQuantity product}}
            @incrementQuantity={{this.incrementQuantity}}
            @decrementQuantity={{this.decrementQuantity}}
          />
        {{/each}}
      </div>
    {{else}}
      <div class="w-[720px] mt-8 ml-[136px]">
      </div>
    {{/if}}

    <div class="mt-8 ml-12">

      <CartSummary
        @totalPayable={{this.cart.totalPayable}}
        @subtotal={{this.cart.subtotal}}
        @totalDiscount={{this.cart.totalDiscount}}
      />

    </div>
  </div>
</div>